.row
  .col-md-12
    h4 Поиск игроков

.row
  .col-md-2 Name,id
  .col-md-4
    input(ng-model="player.name")

.row
  .col-md-2 QH level
  .col-md-4
    select(ng-model="player.qhLvl", ng-options="qhlevel for qhlevel in player.qhlevels")

.row
  .col-md-2 Rating from
  .col-md-2
    input(ng-model="player.rating.from")
  .col-md-1 to
  .col-md-2
    input(ng-model="player.rating.to")

.row
  .col-md-2 Install date
  .col-md-2
    input(ng-model="player.installDate.from")
  .col-md-1 to
  .col-md-2
    input(ng-model="player.installDate.to")

.row
  .col-md-2 Limit
  .col-md-4
    input(ng-model="player.limit")

.row
  .col-md-2
    button.btn.btn-success(ng-click="getUsers(player)") Искать

.row
  .col-md-3.col-md-offset-1 Результат
  .col-md-2.col-md-offset-6 Игроков: {{allPlayers.length}}
.row
  .col-md-12
    table.table.table-striped.table-bordered
      thead
        tr
          th ID
          th Name
          th Rating
          th QH Level
          th Install Date
      tbody
        tr(ng-repeat="p in allPlayers")
          td {{p.id}}
          td {{p.name}}
          td {{p.rating}}
          td {{p.thLevel}}
          td {{p.installDate | date:short}}

